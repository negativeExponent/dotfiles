#!/bin/bash

# terminal app launcher using rofi

die() {
    notify-send "Program not installed, $1."
    exit 1
}

run() {
    command -v "$1" || die "$1"
    $TERMINAL --name floating -e "$1"
}

options="alsamixer|pulsemixer|ncmpcpp|nmtui|tremc|htop"

chosen="$1"

# if no argv is passed, then open menu
[ ! -z "${chosen}" ] || chosen=$(rofi -sep "|" -theme "~/.config/rofi/theme.rasi" -p "Termnal Apps:" -lines 6 -dmenu -i <<< "$options")

case "${chosen}" in
    alsamixer| \
    pulsemixer| \
    ncmpcpp| \
    nmtui| \
    tremc| \
    htop)
        run ${chosen}
        ;;
esac
