#!/bin/env bash

if command -v pacman >/dev/null; then
	if command -v checkupdates >/dev/null; then
		if ! updates=$(checkupdates 2> /dev/null | wc -l ); then
			updates_arch=0
		fi
	else
		if ! updates=$(pacman -Qu 2> /dev/null | wc -l ); then
			updates_arch=0
		fi
	fi
	updates=$(("$updates_arch"))
elif command -v xbps-install >/dev/null; then
	if ! update_xbps=$(xbps-install -Mun 2> /dev/null | wc -l ); then
		update_xbps=0
	fi
	updates=$(("$update_xbps"))
elif command -v dnf >/dev/null; then
	update_dnf=$(dnf check-update 2> /dev/null | wc -l)
	if [ "$update_dnf" -lt "2" ]; then
		update_dnf=0
	fi
	updates=$(("$update_dnf"))
elif command -v apt >/dev/null; then
	if ! updates_apt=$(apt list --upgradable 2> /dev/null | grep -c upgradable); then
		updates_apt=0
	fi
	updates=$(("$updates_apt"))
else
	echo "NA"
	exit
fi

if [ "$updates" -gt 0 ]; then
	echo "ğŸ“¦$updates"
	notify-send "ğŸ“¦$updates updates available."
else
	echo "ğŸ“¦0"
fi
