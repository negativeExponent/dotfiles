##
## wm independent hotkeys
## NOTE: Comments should start with '##'
## while hotkey descriptions use only one '#'
## This will make the modkey+F1 help menu more readable
##

##
## Common optional bspwm commands (disabled by default)
## These are included for reference or future use

## toggle window visibility (hidden state)
## # hide / show
## super + ctrl + h
##    bspc node -g hidden

## enable/disable split type (auto/manual)
## # toggle split mode
## super + ctrl + m
##    bspc node -B manual

## set split type
## # split horizontal / vertical
## super + ctrl + {h,v}
##    bspc node -t {horizontal,vertical}

## rotate tree
## # rotate clockwise / counter-clockwise
## super + ctrl + {r,shift + r}
##    bspc node @/ -R {90,-90}

## flip tree
## # flip horizontal / vertical
## super + ctrl + {x,y}
##    bspc node @/ -F {horizontal,vertical}

## balance tree
## # balance window sizes
## super + ctrl + b
##    bspc node @/ -B balanced

## equalize sizes
## # equalize window sizes
## super + ctrl + e
##    bspc node @/ -B equal

## remove focused node's split type
## # unlink split
## super + ctrl + u
##    bspc node -r

# reload sxhkd config
super + Escape
	pkill -USR1 -x sxhkd

##
## bspwm hotkeys
##

# quit panel then exit bspwm
super + alt + Escape
	pkill -x panel; bspc quit

# quit / restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close / kill node
super + {_,shift + }q
	bspc node -{c,k}

# toggle layout (tiled / monocle)
super + m
	bspc desktop -l next

# send marked node to preselected location
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap with biggest window
super + g
	bspc node -s biggest

##
## state / flags
##

# toggle floating / tiled
super + space
    bspc node -t "~"{floating,tiled}

# toggle pseudo_tiled / tiled
super + {p,t}
    bspc node -t {pseudo_tiled,tiled}

# mark / lock / sticky / private
# mark focused node / lock input / sticky across desktops / private from external tools
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

##
## focus / swap
##

# focus / swap in direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus parent / sibling / first / second
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus next / previous node
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus next / previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus last node / desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus older / newer in history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus / send to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

##
## preselect
##

# preselect direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel node preselection
super + ctrl + space
	bspc node -p cancel

# cancel desktop preselection
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

##
## move / resize
##

# expand window
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# shrink window
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

##
## volume / media
##

# volume up / down / mute
XF86Audio{RaiseVolume,LowerVolume,Mute}
	amixer {-q set Master 5%+,-q set Master 5%-,set Master toggle}

# media next / prev / toggle / stop
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# power menu
XF86PowerOff
	rofi-powermenu

##
## apps / programs
##

# terminal
super + Return
	$TERMINAL

# alt terminal
super + ctrl + Return
	kitty -c /usr/share/doc/kitty/kitty.conf

# floating terminal
super + shift + Return
	term_float

# browser
super + w
    $BROWSER

# file manager
super + f
    $FILEMANAGER

# editor
super + e
    $EDITOR

# launcher
super + d
	rofi-appmenu

# alt launcher
super + ctrl + d
	rofi -show drun

alt + F1
	rofi-appmenu

# power menu
super + x
	rofi-powermenu

# screenshot full / window
super + {_,shift +} Print
    screenshot {full, window}

# keybind help
super + F1
	sxhkd-showkeys

# reload bspwm
super + F2
	bspc wm -r

# theme chooser
super + F7
	rofi-theme

# change wallpaper (random)
super + shift + F8
	wallpaper-changer

# change wallpaper (nitrogen or feh)
super + F8
	command -v nitrogen && nitrogen || command -v feh && feh ~/Pictures/Wallpapers

# toggle compositor
super + F9
	launch_picom toggle

# reload polybar
super + F10
	polybar-msg cmd restart
