#!/bin/bash

_c() { bspc config "$@"; }
_m() { bspc monitor "$@"; }
_r() { bspc rule "$@"; }

BIN=${HOME}/.local/bin
PATH=${PATH}:${BIN}:${BIN}/transmission

## autostart programs
. "$HOME/.local/bin/bspwm/startup"

. "$HOME/.local/bin/getcolors"

_c normal_border_color          "$color0" #
_c active_border_color          "$color6" #
_c focused_border_color         "$color4" #
_c presel_feedback_color        "$color3" # apply colors to windows

## monitor settings
_m -d                           1 2 3 4 5 6 7 8 9

## window settings
_c border_width                 2
_c window_gap                   10
_c top_padding                  26
_c bottom_padding               0
_c split_ratio                  0.52
_c borderless_monocle           true
_c gapless_monocle              true

## mouse behaviors
_c focus_follows_pointer        true

## application rules

# prevent doubling rules
_r -r "*"

# apply special rules first
_r -a mplayer2                  state=floating
_r -a Kupfer.py                 focus=on
_r -a Screenkey                 manage=off
_r -a Lxappearance              state=floating
_r -a Nitrogen                  state=floating
_r -a Nm-connection-editor      state=floating
_r -a Gnome-calculator          state=floating
_r -a *:show_help               state=floating
_r -a *:floating                state=floating
_r -a File-roller               state=floating
_r -a Yad                       state=floating
_r -a nmtui                     state=floating
_r -a retroarch                 state=floating
_r -a yad-calendar              state=floating
_r -a mpv                       state=pseudo_tiled

_r -a Brave-browser             desktop='^2'    follow=on
_r -a Firefox                   desktop='^2'    follow=on
_r -a "Code - OSS"              desktop='^3'    follow=on
_r -a vscodium                  desktop='^3'    follow=on
_r -a discord                   desktop='^6'    follow=on
