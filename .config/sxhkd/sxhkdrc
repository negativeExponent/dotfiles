##
## wm independent hotkeys
## NOTE: Comments should start with '##'
## while hotket descriptions use only one '#'
## This will make the modkey+F1 help menu more readable
##

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

##
## bspwm hotkeys
##

# close bar then quit wm
super + alt + Escape
	pkill -x panel; bspc quit

## quit/restart bspwm
## super + alt + {q,r}
##	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

##
## state/flags
##

## set the window state
##super + {t,shift + t,s,f}
##	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# toggle floating or tiled
super + space
    bspc node -t "~"{floating,tiled}

# toggle pseudo tiled or tiled mode
super + {p,t}
    bspc node -t {pseudo_tiled,tiled}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

##
## focus/swap
##

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

##
## preselect
##

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

##
## move/resize
##

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	amixer {-q set Master 5%+,-q set Master 5%-,set Master toggle}

# music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

## Show now-playing
##super + m
##	notify-send "Now Playing â™«" "$(mpc current)"

##
## non-bspwm bindings
##

# help
super + F1
	sxhkd_showkeys

# reload bspwm
super + F2
	bspc wm -r

# terminal emulator
super + Return
	$TERMINAL

# floating terminal emulator
super + shift + Return
	$TERMINAL --name floating

## super + BackSpace
##	st

# launch browser
super + w
    $BROWSER

# launch filemanager
super + f
    $FILEMANAGER

# launch gui editor
super + e
    $EDITOR

# program launcher
super + d
	launch_rofi

# power menu
super + x
	powermenu

# change wallpaper (random)
super + F8
	change_wallpaper

# printscreen (full, selection)
super + {_,shift +} Print
    screenshot {full, window}

# rofi bindings fancy menu
super + F9
	rofi -modi drun -show drun -line-padding 4 \
                -columns 2 -padding 50 -hide-scrollbar \
                -show-icons -drun-icon-theme "Arc-X-D" -font "MesloLGS NF 10"

super + F10
	rofi -show window -line-padding 4 \
                -lines 6 -padding 50 -hide-scrollbar \
                -show-icons -drun-icon-theme "Arc-X-D" -font "MesloLGS NF 10"
