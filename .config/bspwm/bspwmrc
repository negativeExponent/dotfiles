#!/bin/bash

## add some colors to bspwm
bspc config normal_border_color 	"#44475a"
bspc config active_border_color 	"#6272A4"
bspc config focused_border_color 	"#ff79c6"
bspc config presel_feedback_color 	"#6272a4"

## monitor settings
bspc monitor -d 1 2 3 4 5 6 7 8 9
bspc config border_width            2
bspc config window_gap              10
bspc config top_padding             20
bspc config bottom_padding          0
bspc config split_ratio             0.52
bspc config borderless_monocle      false
bspc config gapless_monocle         true

## mouse behaviors
bspc config focus_follows_pointer   true

## application rules

# prevent doubling rules
bspc rule -r "*"

# apply special rules first
bspc rule -a mplayer2               state=floating
bspc rule -a Kupfer.py              focus=on
bspc rule -a Screenkey              manage=off
bspc rule -a Lxappearance           state=floating
bspc rule -a Nitrogen               state=floating
bspc rule -a Nm-connection-editor	state=floating
bspc rule -a Gnome-calculator       state=floating
bspc rule -a *:show_help            state=floating
bspc rule -a *:floating             state=floating
bspc rule -a File-roller            state=floating
bspc rule -a Yad                    state=floating
bspc rule -a *:nmtui                state=floating
bspc rule -a retroarch              state=floating

bspc rule -a Brave-browser desktop='^2'  follow=on
bspc rule -a Firefox desktop='^2' follow=on

bspc rule -a "Code - OSS" desktop='^3' follow=on

## autostart programs
. ~/.config/bspwm/autostart.sh
