#!/bin/bash

# Show a help menu using rofi
# https://my-take-on.tech/2020/07/03/some-tricks-for-sxhkd-and-bspwm/
awk '/^[a-z]/ && last {print "<small>",$0,"\t",last,"</small>"} {last=""} /^#/{last=$0}' ~/.config/sxhkd/sxhkdrc |
    column -t -s $'\t' | rofi -theme ~/.config/rofi/sxhkdbinds.rasi -p "Keybinds" -dmenu -i -markup-rows

#    rofi -dmenu -i -markup-rows -no-show-icons -width 800 -lines 30 -yoffset 40 \
#    -hide-scrollbar true \
#    -padding 24 \
#    -color-enabled true \
#    -color-window "#282a36, #BD93F9, #282a36" \
