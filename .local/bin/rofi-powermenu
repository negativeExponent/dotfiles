#!/bin/env bash

# rofi power menu
cmd_logout="ðŸš€ Log out"
cmd_lock="ðŸ”’ Lock"
cmd_suspend="ðŸ’¤ Suspend"
cmd_reboot="ðŸ”„ Reboot"
cmd_shutdown="ðŸ’» Shutdown"
cmd_reload="ðŸ”ƒ Reload"

options="$cmd_reload|$cmd_logout|$cmd_lock|$cmd_suspend|$cmd_reboot|$cmd_shutdown"
chosen=$(rofi -sep "|" -theme "~/.config/rofi/powermenu.rasi" -p "Power Menu" -dmenu -i <<< "$options")

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="sudo -A zzz" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p" ;;
esac

case "$chosen" in
    $cmd_logout)
        if pgrep -u $USER bspwm >/dev/null; then
            # For each opened window
            bspc query --nodes | while read -r winid; do
                # Close it
                xdotool windowkill "$winid"
            done
        fi
        if pgrep -u $USER bspwm >/dev/null; then
            bspc quit
        elif pgrep -u $USER dwm >/dev/null; then
            kill -TERM $(pgrep -u $USER "\bdwm$")
        fi
        ;;
    $cmd_lock)
        betterlockscreen --lock dimblur;;
#        ;;
#    $cmd_suspend)
#        systemctl suspend;;
#        ;;
    $cmd_reboot)
        ${reb:-sudo -A reboot}
        ;;
    $cmd_shutdown)
        ${shut:-sudo -A shutdown -p now}
        ;;
    $cmd_reload)
        if pgrep -u $USER bspwm >/dev/null; then
            bspc wm -r
        elif pgrep -u $USER dwm >/dev/null; then
            kill -HUP $(pgrep -u $USER "\bdwm$")
        fi
        ;;
esac
