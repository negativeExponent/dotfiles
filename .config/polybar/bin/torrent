#!/bin/sh

transmission-remote -l | grep % |
	sed " # The letters are for sorting and will not appear.
	s/.*Stopped.*/A ğŸ›‘/;
	s/.*Seeding.*/Z ğŸŒ±/;
	s/.*100%.*/N âœ…/;
	s/.*Idle.*/B ğŸ•°ï¸/;
	s/.*Uploading.*/L â¬†ï¸/;
	s/.*%.*/M â¬‡ï¸/" |
		sort -h | uniq -c | awk '{print $3 $1}' | paste -sd ' ' -

case "$1" in
	1) setsid -f term_float tremc ;;
	2)
	torrents="$(transmission-remote -l | sed '/Sum/d')"
	notify-send "ğŸŒ± Torrents" "$(echo "$torrents" | sed '1d' | awk '{printf $2 " " $3 " " $4 " "}{for(i = 10; i < 30; i++) printf $i" "}{print ""}' | awk '{$1=$1};1')"
	if pgrep "polybar"; then
		polybar-msg -p "$(pidof "polybar")" action "#torrents.hook.0"
	fi
	;;	
esac
