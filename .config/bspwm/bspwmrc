#!/bin/bash

export PATH=${PATH}:${HOME}/.local/bin:${HOME}/.local/bin/transmission

## AUTOSTART
. "$HOME/.config/bspwm/autostart"

## MONITOR SETTINGS
bspc monitor -d                           1 2 3 4 5 6 7 8 9

## THEME
# get colors from xrdb
. "$HOME/.local/bin/getcolors"
bspc config normal_border_color          "$CYAN"
bspc config active_border_color          "$ALTRED"
bspc config focused_border_color         "$MAGENTA"
bspc config presel_feedback_color        "$GREEN"

## MISC SETTINGS
bspc config border_width                 1
bspc config window_gap                   10
bspc config top_padding                  30
bspc config split_ratio                  0.52

bspc config single_monocle               true
bspc config borderless_monocle           false
bspc config gapless_monocle              false

## MOUSE CONTROLS
bspc config focus_follows_pointer        true

## WINDOW RULES
bspc config external_rules_command ~/.config/bspwm/external_rules
