#!/bin/sh

mpd &
xset r rate 300 50 &	# Speed xrate up
unclutter &		# Remove mouse when idle
. "$HOME/.fehbg" & # set the background
xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources
. "$HOME/.local/bin/launch_dunst" &
. "$HOME/.local/bin/launch_picom" &
. "$HOME/.local/bin/setcolors" &

# Make Thunar always launched with DBUS
# Without this, mounting, unmounting, trash, etc won't work in Thunar
if which dbus-launch >/dev/null && test -z "$DBUS_SESSION_BUS_ADDRESS";
then
	eval "$(dbus-launch --sh-syntax --exit-with-session)"
fi

# This line autostarts an instance of Pulseaudio that does not exit on idle.
# This is "necessary" on Artix due to a current bug between PA and
# Chromium-based browsers where they fail to start PA and use dummy output.
pidof -s runit &&
	pidof -s ! pidof -s pulseaudio >/dev/null 2>&1 &&
	setsid -f pulseaudio --start --exit-idle-time=-1 >/dev/null 2>&1
